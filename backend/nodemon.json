{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules/**/*",
    "dist/**/*"
  ],
  "exec": "ts-node --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "delay": "1000",
  "verbose": true,
  "signal": "SIGTERM",
  "legacyWatch": false
}
